<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".RoomOne.RoomOne_Receipt">


    <ImageView
        android:id="@+id/back_order_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:layout_weight="0.1"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="391dp"
        android:layout_height="79dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="영 수 증 "
        android:textColor="#070D19"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="30dp"
        android:layout_height="43dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="①"
        android:textColor="#03060B"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/RoomNumber_One_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/RoomNumber_One_tv"
        android:layout_width="269dp"
        android:layout_height="42dp"
        android:layout_marginTop="60dp"
        android:text="방번호 정보 받기"
        android:textColor="#070B12"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="31dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:text="②"
        android:textColor="#0F1219"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/total_One_tv"
        android:layout_width="252dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:text="총 금액 정보"
        android:textColor="#060A12"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/RoomNumber_One_tv" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="30dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="③"
        android:textColor="#0A101B"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:text="결제방법은"
        android:textColor="#070B12"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/money_One_btn"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/total_One_tv"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/method_One_tv"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="무엇입니다."
        android:textColor="#04070B"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/total_One_tv"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/money_One_btn"
        android:layout_width="84dp"
        android:layout_height="88dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/gray"
        android:elevation="30dp"
        android:text="현금"
        android:textColor="#0C0F15"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/gift_card_One_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/card_One_btn"
        android:layout_width="84dp"
        android:layout_height="88dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/gray"
        android:elevation="30dp"
        android:text="카드"
        android:textColor="#070D19"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/money_One_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/gift_card_One_btn"
        android:layout_width="84dp"
        android:layout_height="88dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/gray"
        android:elevation="20dp"
        android:text="상품권"
        android:textColor="#04070E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toEndOf="@+id/card_One_btn"
        app:layout_constraintTop_toBottomOf="@+id/method_One_tv" />

    <Button
        android:id="@+id/receipt_settlement_One_btn"
        android:layout_width="303dp"
        android:layout_height="67dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gray"
        android:elevation="30dp"
        android:text="계산 완료"
        android:textColor="#04080E"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_One_btn"
        app:layout_constraintVertical_bias="0.133" />


</androidx.constraintlayout.widget.ConstraintLayout>