<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".RoomAssignment">


    <ImageView
        android:id="@+id/back_calender_btn"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:layout_weight="0.1"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="방을 선택해 주세요!"
        android:textColor="#0A1217"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:text="금일 날짜"
        android:textColor="#08151E"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_btn"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/circle_num1"
        android:elevation="30dp"
        android:text="1번 방"
        android:textColor="#9DC6E1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sixth_btn"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/circle_num2"
        android:elevation="30dp"
        android:text="6번 방"
        android:textColor="#9DC6E1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/second_btn"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/circle_num2"
        android:elevation="30dp"
        android:text="2번 방"
        android:textColor="#9DC6E1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seven_btn"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/circle_num3"
        android:elevation="30dp"
        android:text="7번 방"
        android:textColor="#9DC6E1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/three_btn"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginTop="472dp"
        android:layout_weight="1"
        android:background="@drawable/circle_num3"
        android:elevation="30dp"
        android:text="3번 방"
        android:textColor="#9DC6E1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/five_btn"
        android:layout_width="122dp"
        android:layout_height="111dp"
        android:layout_marginTop="508dp"
        android:layout_weight="1"
        android:background="@drawable/circle_num3"
        android:elevation="30dp"
        android:text="5번 방"
        android:textColor="#9DC6E1"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>